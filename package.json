{
  "name": "audiotailoc",
  "private": true,
  "packageManager": "pnpm@9.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r run dev",
    "build": "pnpm -r run build",
    "start": "pnpm -r run start",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "test": "pnpm -r run test",
    "test:cov": "pnpm -r run test:cov",
    "test:e2e": "pnpm -r run test:e2e",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r run typecheck",
    "prepare": "husky install",
    "backend:dev": "pnpm --filter @audiotailoc/backend start:dev",
    "backend:build": "pnpm --filter @audiotailoc/backend build",
    "frontend:build": "pnpm --filter @audiotailoc/frontend build",
    "dashboard:build": "pnpm --filter @audiotailoc/dashboard build",
    "clean": "pnpm -r run clean",
    "audit": "pnpm audit --audit-level moderate"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "20",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^5.1.0"
  }
}
