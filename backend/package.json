{
  "name": "@audiotailoc/backend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "npm": ">=10.x"
  },
  "scripts": {
    "dev": "npm run start:dev",
    "start": "npx prisma generate && node dist/main.js",
    "start:dev": "nest start --watch",
    "start:simple": "ts-node src/main.simple.ts",
    "prebuild": "prisma generate",
    "build": "nest build",
    "typecheck": "tsc --noEmit",
    "typecheck:full": "tsc --noEmit --strict",
    "prisma:generate": "prisma generate",
    "postbuild": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "seed": "ts-node src/seed.ts",
    "seed:simple": "node scripts/seed-simple.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:auth": "jest --testPathPattern=auth",
    "test:performance": "jest --testPathPattern=performance",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:setup": "node scripts/setup-test-db.js",
    "test:cleanup": "node scripts/cleanup-test-data.js"
  },
  "dependencies": {
