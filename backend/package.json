    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^10.4.20",
    "@prisma/client": "6.16.2",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/archiver": "^6.0.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/helmet": "^0.0.48",
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
