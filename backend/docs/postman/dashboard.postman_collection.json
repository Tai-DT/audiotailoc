  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set example variables if not set",
          "if (!pm.environment.get('baseUrl')) { pm.environment.set('baseUrl', 'http://localhost:3000'); }",
          "if (!pm.environment.get('token')) { pm.environment.set('token', 'eyJhbGci...'); }"
        ]
      }
