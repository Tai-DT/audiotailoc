        "url": {
          "raw": "{{baseUrl}}/api/v1/dashboard/summary?startDate=2026-01-01&endDate=2026-01-31&fields=revenue,orders",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","dashboard","summary"],
          "query": [
            { "key": "startDate", "value": "2026-01-01" },
            { "key": "endDate", "value": "2026-01-31" },
            { "key": "fields", "value": "revenue,orders" }
          ]
        }
      }
    },
    {
      "name": "Get Metrics",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/dashboard/metrics?page=1&pageSize=20&sortBy=timestamp&sortOrder=desc",
          "host": ["{{baseUrl}}"],
          "path": ["api","v1","dashboard","metrics"],
          "query": [
            { "key": "page", "value": "1" },
            { "key": "pageSize", "value": "20" },
            { "key": "sortBy", "value": "timestamp" },
            { "key": "sortOrder", "value": "desc" }
          ]
        }
