          "host": ["{{baseUrl}}"],
          "path": ["api","v1","dashboard","charts"],
          "query": [
            { "key": "startDate", "value": "2026-01-01" },
            { "key": "endDate", "value": "2026-01-07" }
          ]
        }
      }
    },
    {
      "name": "Post Refresh",
