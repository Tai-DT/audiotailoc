# Production Environment Configuration
# Audio Tài Lộc Production Environment

# Database Configuration
DATABASE_URL="postgresql://postgres:your_production_password@postgres:5432/atl"
POSTGRES_URL="postgresql://postgres:your_production_password@postgres:5432/atl"

# JWT Configuration
JWT_ACCESS_SECRET="your-production-jwt-access-secret-change-this-in-production"
JWT_REFRESH_SECRET="your-production-jwt-refresh-secret-change-this-in-production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# PayOS Payment Configuration
PAYOS_CLIENT_ID="your-production-payos-client-id"
PAYOS_API_KEY="your-production-payos-api-key"
PAYOS_CHECKSUM_KEY="your-production-payos-checksum-key"
PAYOS_PARTNER_CODE="your-production-payos-partner-code"
PAYOS_API_URL="https://api.payos.vn"
PAYOS_WEBHOOK_URL="https://your-domain.com/api/v1/payments/payos/webhook"
PAYOS_RETURN_URL="https://your-domain.com/checkout/return"
PAYOS_CANCEL_URL="https://your-domain.com/checkout/cancel"

# VNPay Configuration
VNPAY_TMN_CODE="your-production-vnpay-tmn-code"
VNPAY_HASH_SECRET="your-production-vnpay-hash-secret"
VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"
VNPAY_RETURN_URL="https://your-domain.com/checkout/return"

# MoMo Configuration
MOMO_PARTNER_CODE="your-production-momo-partner-code"
MOMO_ACCESS_KEY="your-production-momo-access-key"
MOMO_SECRET_KEY="your-production-momo-secret-key"
MOMO_ENDPOINT="https://test-payment.momo.vn/v2/gateway/api/create"

# Server Configuration
PORT="8000"
NODE_ENV="production"
API_VERSION="v1"

# Redis Configuration
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-production-email@gmail.com"
SMTP_PASS="your-production-app-password"
EMAIL_FROM="noreply@audiotailoc.com"

# File Storage Configuration
CLOUDINARY_CLOUD_NAME="your-production-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-production-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-production-cloudinary-api-secret"

# MinIO Configuration
MINIO_ENDPOINT="your-production-minio-endpoint"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="your-production-minio-access-key"
MINIO_SECRET_KEY="your-production-minio-secret-key"
MINIO_BUCKET_NAME="audiotailoc-production"

# Google AI Configuration
GOOGLE_AI_API_KEY="your-production-google-ai-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# Search Configuration
MEILI_MASTER_KEY="your-production-meilisearch-master-key"
MEILI_URL="http://meilisearch:7700"

# Maps Integration
GOOGLE_MAPS_API_KEY="your-production-google-maps-api-key"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="1000"

# CORS Configuration
CORS_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Logging
LOG_LEVEL="info"
LOG_FILE="true"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="your-production-session-secret"

# Frontend URLs
FRONTEND_URL="https://your-domain.com"
DASHBOARD_URL="https://dashboard.your-domain.com"
ADMIN_URL="https://admin.your-domain.com"

# Webhook Configuration
WEBHOOK_SECRET="your-production-webhook-secret"

# Analytics
ANALYTICS_ENABLED="true"

# Monitoring
ENABLE_SWAGGER="true"
ENABLE_METRICS="true"
PROMETHEUS_PORT="9090"
GRAFANA_PORT="3002"

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Admin Configuration
ADMIN_EMAILS="admin@your-domain.com"
ADMIN_SETUP_COMPLETE="true"

# Production Optimizations
COMPRESSION_LEVEL="6"
CACHE_TTL="3600"
SESSION_TIMEOUT="3600000"

# SSL Configuration
SSL_CERT_PATH="/etc/ssl/certs/your-domain.crt"
SSL_KEY_PATH="/etc/ssl/private/your-domain.key"
SSL_FORCE_REDIRECT="true"

# CDN Configuration
CDN_URL="https://cdn.your-domain.com"
CDN_ENABLED="true"

# Performance
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="10000"
CONNECTION_POOL_SIZE="20"
QUERY_TIMEOUT="30000"