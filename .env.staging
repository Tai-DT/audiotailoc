# Staging Environment Configuration
# Audio Tài Lộc Staging Environment

# Database Configuration
DATABASE_URL="postgresql://postgres:staging_password@postgres:5432/atl_staging"
POSTGRES_URL="postgresql://postgres:staging_password@postgres:5432/atl_staging"

# JWT Configuration
JWT_ACCESS_SECRET="staging-jwt-access-secret-change-this"
JWT_REFRESH_SECRET="staging-jwt-refresh-secret-change-this"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# PayOS Payment Configuration (Test Mode)
PAYOS_CLIENT_ID="your-staging-payos-client-id"
PAYOS_API_KEY="your-staging-payos-api-key"
PAYOS_CHECKSUM_KEY="your-staging-payos-checksum-key"
PAYOS_PARTNER_CODE="your-staging-payos-partner-code"
PAYOS_API_URL="https://api.payos.vn"
PAYOS_WEBHOOK_URL="https://staging.your-domain.com/api/v1/payments/payos/webhook"
PAYOS_RETURN_URL="https://staging.your-domain.com/checkout/return"
PAYOS_CANCEL_URL="https://staging.your-domain.com/checkout/cancel"

# VNPay Configuration (Sandbox)
VNPAY_TMN_CODE="your-staging-vnpay-tmn-code"
VNPAY_HASH_SECRET="your-staging-vnpay-hash-secret"
VNPAY_URL="https://sandbox.vnpayment.vn/paymentv2/vpcpay.html"
VNPAY_RETURN_URL="https://staging.your-domain.com/checkout/return"

# MoMo Configuration (Test)
MOMO_PARTNER_CODE="your-staging-momo-partner-code"
MOMO_ACCESS_KEY="your-staging-momo-access-key"
MOMO_SECRET_KEY="your-staging-momo-secret-key"
MOMO_ENDPOINT="https://test-payment.momo.vn/v2/gateway/api/create"

# Server Configuration
PORT="8000"
NODE_ENV="staging"
API_VERSION="v1"

# Redis Configuration
REDIS_URL="redis://redis:6379"
REDIS_PASSWORD=""
REDIS_DB=1

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="staging@your-domain.com"
SMTP_PASS="staging-app-password"
EMAIL_FROM="noreply@staging.audiotailoc.com"

# File Storage Configuration
CLOUDINARY_CLOUD_NAME="your-staging-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-staging-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-staging-cloudinary-api-secret"

# MinIO Configuration
MINIO_ENDPOINT="staging-minio.your-domain.com"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="staging-minio-access-key"
MINIO_SECRET_KEY="staging-minio-secret-key"
MINIO_BUCKET_NAME="audiotailoc-staging"

# Google AI Configuration
GOOGLE_AI_API_KEY="your-staging-google-ai-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# Search Configuration
MEILI_MASTER_KEY="your-staging-meilisearch-master-key"
MEILI_URL="http://meilisearch:7700"

# Maps Integration
GOOGLE_MAPS_API_KEY="your-staging-google-maps-api-key"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="500"

# CORS Configuration
CORS_ORIGINS="https://staging.your-domain.com"

# Logging
LOG_LEVEL="debug"
LOG_FILE="true"

# Security
BCRYPT_ROUNDS="10"
SESSION_SECRET="staging-session-secret"

# Frontend URLs
FRONTEND_URL="https://staging.your-domain.com"
DASHBOARD_URL="https://dashboard-staging.your-domain.com"
ADMIN_URL="https://admin-staging.your-domain.com"

# Webhook Configuration
WEBHOOK_SECRET="staging-webhook-secret"

# Analytics
ANALYTICS_ENABLED="true"

# Monitoring
ENABLE_SWAGGER="true"
ENABLE_METRICS="true"
PROMETHEUS_PORT="9090"
GRAFANA_PORT="3002"

# Backup Configuration
BACKUP_ENABLED="false"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="7"

# Admin Configuration
ADMIN_EMAILS="staging-admin@your-domain.com"
ADMIN_SETUP_COMPLETE="true"

# Staging Optimizations
COMPRESSION_LEVEL="6"
CACHE_TTL="1800"
SESSION_TIMEOUT="1800000"

# Test Data
SEED_DATA="true"
DEBUG="true"